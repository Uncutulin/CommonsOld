@model Commons.Identity.CommonsRole
@addTagHelper *, Commons
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form asp-action="_Create" data-loader-text="Creando rol...">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ShowName" class="control-label">Nombre</label>
        <input asp-for="ShowName" class="form-control" />
        <span asp-validation-for="ShowName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Descripción</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-danger" />
    </div>
</form>

