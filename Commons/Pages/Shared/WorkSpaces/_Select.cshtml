@using Commons.Identity
@model List<IWorkSpace>
@addTagHelper *, Commons
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@if (Model == null || Model.Count == 0)
{
    <div class="row">
        <div class="col-md-12" style="text-align: center">
            <p class="text-muted">No hay workspaces disponibles.</p>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            @foreach (IWorkSpace ws in Model)
            {
                <a asp-controller="WorkSpaces" asp-action="_Change" asp-route-id="@ws.Id" class="btn btn-primary btn-block btn-lg">@ws.Name</a>
            }
        </div>
    </div>
}