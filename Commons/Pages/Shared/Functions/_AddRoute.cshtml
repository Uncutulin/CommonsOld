@model string
@addTagHelper *, Commons
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<div class="row">
    <div class="col-md-12">
        <h4>Añadir un controlador:</h4>
        <form asp-action="AddController">
            <input type="hidden" value="@Model" name="functionId" />
            <div class="form-group">
                <select asp-items="@ViewBag.Controllers" data-width="100%" name="controller"></select>
            </div>
            <button class="btn btn-danger pull-right" type="submit">Aceptar</button>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <h4>Añadir una única ruta:</h4>
        <form asp-action="_AddRoute">
            <input type="hidden" value="@Model" name="functionId" />
            <div class="form-group">
                <select asp-items="@ViewBag.Routes" data-width="100%" name="route"></select>
            </div>
            <button class="btn btn-danger pull-right" type="submit">Aceptar</button>
        </form>
    </div>
</div>