-->

<h3>Debug Modal</h3>
<a class="btn btn-danger" onclick="Create()">Click me!</a>

<script src="~/js/commons_modals_debug.js"></script>

<div class="modal fade in" id="CreateModal" style="display: none;">
    <div class="modal-dialog ">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Nueva funcion</h4>
            </div>

            <div class="holder" style="min-height: 250px">
                <div class="preloader">
                    <div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div>
                </div>
                <h4 class="preloader-text"></h4>
            </div>

            <div class="modal-body " style="">

            </div>
        </div>
    </div>
    <script type="text/javascript">
        function Create(id) {
            LoadModalDebug('#CreateModal', '@Url.Action("_Embed2", "Modals")/');
        };
    </script>
</div>


