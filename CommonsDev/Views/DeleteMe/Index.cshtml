@using Commons.Identity
@model IEnumerable<Commons.Identity.CommonsFunction>

@{
    ViewData["Title"] = "Funciones";
}


<box color="Danger">
    <box-header title="Listado">
        <a class="btn btn-danger pull-right btn-sm" onclick="Create()">Nuevo</a>
    </box-header>
    <box-body table="true">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeletedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastEditTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Display)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Show)
                </th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeletedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastEditTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Display)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Show)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </box-body>
</box>

<box color="Primary">
    <box-header title="Rutas del sistema"></box-header>
    <box-body table="true">
        <table class="table table-hover table-striped">
            <thead>
            <tr>
                <th>
                    Area
                </th>
                <th>
                    Controller
                </th>
                <th>
                    Action
                </th>
                <th>
                    Url
                </th>
            </tr>
            </thead>
            <tbody>

            @foreach (var route in (List<CommonsRoute>)@ViewBag.Routes)
            {
                <tr>
                    <td>

                        @route.Area
                    </td>
                    <td>

                        @route.Controller
                    </td>
                    <td>

                        @route.Action
                    </td>
                    <td>

                        @route.Url
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </box-body>
</box>
<modal title="Nueva funcion" function="Create" load-url="/DeleteMe/_Create/"></modal>