@*
    Data attributes:
        data-confirmbodytext,
        data-confirmyestext,
        data-confirmnotext,
        dataconfirmtitletext

    Modal Ids:
        #dataConfirmText,
        #dataConfirmYes,
        #dataConfirmNo,
        #dataConfirmTitle
*@
<link rel="stylesheet" href="~/css/commons/confirm_modal.css"/>

<div id="dataConfirmModal" class="modal fade in">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="icon-box">
                    <i id="dataConfirmIcon" class="fa fa-remove"></i>
                </div>
                <h4 id="dataConfirmTitle" class="modal-title">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <p id="dataConfirmText">Modal text.</p>
            </div>
            <div class="modal-footer">
                <a id="dataConfirmNo" class="btn btn-default btn-lg btn-flat" data-dismiss="modal">No</a>
                <a id="dataConfirmYes" class="btn btn-primary btn-lg btn-flat">Yes</a>
            </div>
        </div>
    </div>
</div>

<script src="~/js/commons/confirm_modal.min.js"></script>