@model IEnumerable<Commons.Models.Message>
@foreach (var item in Model)
{
    if (item.Type == "error")
    {
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-ban"></i> Error!</b> &nbsp &nbsp @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "info")
    {
        <div class="alert alert-info alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-info"></i> Información!</b> &nbsp &nbsp @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "warning")
    {
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-warning"></i> Alerta!</b> &nbsp &nbsp @Html.Raw(@item.ShortDesc)
        </div>
    }

    if (item.Type == "success")
    {
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <b><i class="icon fa fa-check"></i> Confirmado!</b> &nbsp &nbsp @Html.Raw(@item.ShortDesc)
        </div>
    }
}
